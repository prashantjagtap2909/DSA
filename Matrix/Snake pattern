Print matrix in snake pattern

void printSnake(int mat[r][c]){
    for(int i = 0;i<r;i++){
        if(i%2==0){
            for(int j = 0 ; j<c;j++){
                cout<<mat[i][j]<<"";
            }
        }else{
            for(int j = c-1;j>=0;j--){
                cout<<mat[i][j]+"";
            }
        }
     }
 }
