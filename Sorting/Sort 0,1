Sort an array with two types of element

void Sort(int arr[],int n){
    int i = -1;
    int j = n;
    
    while(true){
        do{
            i++;
           }
           while(arr[i]<0);
        do{j++};while(arr[j]>=0);
        if(i>=j)
            return ;
        swap(arr[i],arr[j]);
    }
}

int main(){
    int arr[n];
    for(int i = 0;i<n;i++){
        cin>>arr[i];
    }
    sort(arr,n);
    for(int x :arr){
        cout<<x<<"";
    }
}
